<?xml version="1.0" encoding="utf-8"?>
<tele>
    <data>
        <record id="tele_pos_theme_settings_form" model="ir.ui.view">
            <field name="name">tele.pos.theme.settings.form</field>
            <field name="model">tele.pos.theme.settings</field>
            <field name="arch" type="xml">
                <form create="0" delete="0" class="tele_pos_theme_settings_form">
                    <group>
                        <group string="Theme Color">
                            <field name="theme_color_type" widget="selection" required="1" />

                            <div class="o_td_label">
                                <label for="theme_primary_1_color" string="Theme Primary Color" attrs="{'invisible': [('theme_color_type', '!=', 'solid')]}" style="font-weight: bold;" />

                                <label for="theme_primary_1_color" attrs="{'invisible': [('theme_color_type', '!=', 'gradient')]}" string="Gradient Color 1" style="font-weight: bold;" />

                                <label for="theme_primary_1_color" attrs="{'invisible': [('theme_color_type', '!=', 'dark')]}" string="Theme Dark Color 1" style="font-weight: bold;" />
                            </div>

                            <field name="theme_primary_1_color" nolabel="1" widget="color" />

                            <label for="theme_primary_2_color" attrs="{'invisible': [('theme_color_type', '!=', 'gradient')]}" string="Gradient Color 2" style="font-weight: bold;" />
                            <field name="theme_primary_2_color" attrs="{'invisible': [('theme_color_type', '!=', 'gradient')]}" nolabel="1" widget="color" />

                            <label for="theme_primary_2_color" attrs="{'invisible': [('theme_color_type', '!=', 'dark')]}" string="Theme Dark Color 2" style="font-weight: bold;" />
                            <field name="theme_primary_2_color" attrs="{'invisible': [('theme_color_type', '!=', 'dark')]}" nolabel="1" widget="color" />

                            <field name="theme_gradient_preview" attrs="{'invisible': [('theme_color_type', '!=', 'gradient')]}" />

                            <field name="theme_secondary_color" widget="color" />
                            
                        </group>

                        <group string="Theme Background">
                            <field name="theme_background_type" widget="radio" />
                            <!-- <field name="theme_background_color" attrs="{'invisible': [('theme_background_type', '!=', 'color')], 'required': [('theme_background_type', '=', 'color')]}" widget="color" /> -->
                            <field name="theme_background_image" attrs="{'invisible': [('theme_background_type', '!=', 'image')], 'required': [('theme_background_type', '=', 'image')]}" widget="image" class="oe_avatar float-left" />
                        </group>

                        <!-- <group string="Theme Font">
                            <field name="is_use_google_font" />
                            <field name="google_font_family" 
attrs="{'invisible': [('is_use_google_font', '!=', True)], 'required': [('is_use_google_font', '=', True)]}"/>  						
						</group> -->

                        <group string="Button">
                            <field name="button_type" widget="selection" required="1" />
                            <field name="button_color_type" widget="radio" />

                            <div class="o_td_label">
                                <label for="button_primary_1_color" string="Primary Button Color" attrs="{'invisible': [('button_color_type', '!=', 'solid')]}" style="font-weight: bold;" />

                                <label for="button_primary_1_color" attrs="{'invisible': [('button_color_type', '!=', 'gradient')]}" string="Primary Button Color 1 (For Gradient)" style="font-weight: bold;" />
                            </div>

                            <field name="button_primary_1_color" nolabel="1" widget="color" />

                            <label for="button_primary_2_color" attrs="{'invisible': [('button_color_type', '!=', 'gradient')]}" string="Primary Button Color 2 (For Gradient)" style="font-weight: bold;" />
                            <field name="button_primary_2_color" attrs="{'invisible': [('button_color_type', '!=', 'gradient')]}" nolabel="1" widget="color" />

                            <field name="button_gradient_preview" attrs="{'invisible': [('button_color_type', '!=', 'gradient')]}" />

                            <field name="button_secondary_color" widget="color" />
                        </group>
                    </group>
                    <footer>
                        <button string="Apply" class="btn-primary" type="object" name="action_apply_theme_settings" />
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="tele_pos_theme_settings_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">POS Theme Setting</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="res_model">tele.pos.theme.settings</field>
            <field name="view_id" ref="tele_pos_theme_settings_form"/>
            <field name="res_id">1</field>
        </record>

        <menuitem action="tele_pos_theme_settings_action" id="tele_pos_theme_settings_menu"
              parent="point_of_sale.menu_point_config_product"/>

    </data>
</tele>
