<tele>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="onboarding_banner.list">
      <field name="name">onboarding_banner list</field>
      <field name="model">onboarding_banner.onboarding_banner</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="onboarding_banner.action_window">
      <field name="name">onboarding_banner window</field>
      <field name="res_model">onboarding_banner.onboarding_banner</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="onboarding_banner.action_server">
      <field name="name">onboarding_banner server</field>
      <field name="model_id" ref="model_onboarding_banner_onboarding_banner"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="onboarding_banner" id="onboarding_banner.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="onboarding_banner.menu_1" parent="onboarding_banner.menu_root"/>
    <menuitem name="Menu 2" id="onboarding_banner.menu_2" parent="onboarding_banner.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="onboarding_banner.menu_1_list" parent="onboarding_banner.menu_1"
              action="onboarding_banner.action_window"/>
    <menuitem name="Server to list" id="onboarding_banner" parent="onboarding_banner.menu_2"
              action="onboarding_banner.action_server"/>

  </data>
</tele>