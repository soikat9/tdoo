<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="tele.StudioHomeMenu" t-inherit="tele_studio.StudioHomeMenu" t-inherit-mode="primary" owl="1" t-translation="off">
        <xpath expr="//div[hasclass('o_apps')]/a[hasclass('o_app')]" position="attributes">
            <attribute name="t-att-class">{
                o_focused: appIndex === app_index,
                o_tele_studio_new_app: app.isNewAppButton
            }</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_apps')]/a[hasclass('o_app')]" position="inside">
            <a t-if="!app.isNewAppButton" class="o_tele_studio_edit_icon" t-on-click.stop.prevent="onEditIconClick(app)">
                <i class="fa fa-pencil-square"/>
            </a>
        </xpath>
    </t>
</templates>